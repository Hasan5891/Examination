@model Examination.Data.Part

<form asp-action="Create">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader
{
    Heading = "Bo'limni qo'shish"
})

    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            
                <label asp-for="PredmetID" class="control-label"></label>
           
            <select asp-for="PredmetID" class="form-control" asp-items="ViewBag.Predmets"></select>
            <span asp-validation-for="PredmetID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nomi" class="control-label"></label>
            <input asp-for="Nomi" class="form-control " />
            <span asp-validation-for="Nomi" class="text-danger"></span>
        </div>

    </div>




    @await Html.PartialAsync("_ModalFooter", new ModalFooter {SubmitButtonText = "Tasdiqlash",classButton="btn btn-success" });
