@model ModalFooter

    <div class="modal-footer">
        
        <button data-dismiss="modal" id="@Model.CancelButtonID" class="btn btn-secondary" 
                type="button">@Model.CancelButtonText</button>
        @if (!Model.OnlyCancelButton)
        {
            <button class="@Model.classButton" id="@Model.SubmitButtonID" type="submit">
                @Model.SubmitButtonText
            </button>
        }
    </div>